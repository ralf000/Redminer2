{
  "name": "Redminer",
  "description": "Автоматизатор создания задач",
  "version": "2",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "js": [
        "vendors/jquery.min.js",
        "objects/STORAGE.js",
        "objects/MESSAGES.js",
        "objects/LOGGER.js",
        "objects/LIB.js"
      ],
      "css": [],
      "all_frames": true
    }
  ],
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "unlimitedStorage",
    "downloads",
    "background"
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": [
        "style.css",
        "vendors/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "Redminer",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "externally_connectable": {
    "matches": ["<all_urls>"]  }
}